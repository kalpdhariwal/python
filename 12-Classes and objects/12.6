class Date:
    def __init__(self, day, month, year):
        """Initialize a Date object with day, month, and year."""
        self.day = day
        self.month = month
        self.year = year

    def __repr__(self):
        """String representation of the Date object."""
        return f"{self.day:02}/{self.month:02}/{self.year}"

    def __eq__(self, other):
        """Overload the '==' operator to compare two Date objects."""
        if isinstance(other, Date):
            return (self.day == other.day and
                    self.month == other.month and
                    self.year == other.year)
        return False

# Example usage
if __name__ == "__main__":
    # Create two Date objects
    date1 = Date(15, 5, 2025)
    date2 = Date(15, 5, 2025)
    date3 = Date(10, 6, 2025)

    # Print Date objects
    print(f"Date 1: {date1}")
    print(f"Date 2: {date2}")
    print(f"Date 3: {date3}")

    # Compare dates using the overloaded '==' operator
    print(f"\nIs Date 1 equal to Date 2? {date1 == date2}")
    print(f"Is Date 1 equal to Date 3? {date1 == date3}")
