class Weather:
    def __init__(self, *params):
        """Initialize Weather object with any number of weather parameters."""
        self.parameters = list(params)

    def __repr__(self):
        """String representation of the Weather object."""
        return f"Weather parameters: {', '.join(self.parameters)}"

    def __contains__(self, item):
        """Overload the 'in' operator to check if an item exists in the parameters list."""
        return item in self.parameters

